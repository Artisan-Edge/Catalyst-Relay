{
  "name": "catalyst-relay",
  "version": "0.1.0",
  "description": "TypeScript middleware for SAP ADT integration",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run src/server.ts",
    "build": "tsup",
    "test": "vitest",
    "test:run": "vitest run",
    "test:node": "node --experimental-strip-types -e \"import('./dist/index.js')\"",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "prepublishOnly": "bun run build && bun run test:node"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "sap",
    "adt",
    "abap",
    "middleware",
    "api"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  }
}
